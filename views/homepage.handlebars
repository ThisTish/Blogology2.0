<ul>
	{{#each blogs as |blog|}}
		<li><a href="/api/blog/{{blog.blog_id}}">{{blog.title}}</a></li>
			<p>{{blog.text}} </p>
			{{!-- todo format_date --}}
			<p>Created: {{format_date blog.createdAt}}</p>
			{{!-- todo get user to connect to blog --}}
			<p>Created By: {{blog.user.username}}</p>
			<div>
				<h3>Comments:</h3>
				<ul>
					{{#each comments as |comment|}}
					<li>{{text}}</li>
				</ul>
			</div>
	{{/each}}
</ul>
