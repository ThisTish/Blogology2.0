				<div class="pt-2 group">
					<i class="material-icons text-white text-3xl md:text-5xl group-hover:hidden">roofing</i>
					<span class="hidden group-hover:block text-white text-3xl">Home</span>
				</div>
				<div class="pt-2 shadow-md shadow-white">
					<h1 class="font-sans text-4xl space-grotesk text-zinc-600 bg-white md:text-7xl">Blogology 2.0</h1>
				</div>
				<div class="pt-2 group">
					<div class="material-icons text-white text-3xl md:text-5xl group-hover:hidden">dashboard</div>
					<span class="hidden group-hover:block text-white text-3xl">Dashboard</span>

				</div>
			</div>
