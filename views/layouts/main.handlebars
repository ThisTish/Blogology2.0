	<section class="hero relative flex flex-col items-center md:items-start px-6 h-72 w-full">
	</section>

						{{#if logged_in}}
						<li>
							<a id="logout" href ="#">Logout</a>
						</li>
							
						{{else}}
						<li>
							<a href="/login">Login</a>
						</li>
						
						<li>
							<a href="/signup">Sign Up</a>
						</li>
						{{/if}}

					</ul>
				

